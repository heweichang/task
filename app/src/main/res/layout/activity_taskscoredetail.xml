<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/biaoti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dodgerblue"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="详情评分"
                    android:textColor="@color/white"
                    android:textSize="30dp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_attribute"
                android:layout_below="@+id/biaoti"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/task_id1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="任务单号:" />
                    <TextView
                        android:layout_marginLeft="15sp"
                        android:layout_toRightOf="@+id/task_id1"
                        android:id="@+id/task_id"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/task_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="任务时间:" />
                    <TextView
                        android:id="@+id/task_date"
                        android:layout_marginLeft="15sp"
                        android:layout_toRightOf="@+id/task_date1"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/task_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="任务:" />
                    <TextView
                        android:id="@+id/task_name"
                        android:layout_marginLeft="45sp"
                        android:layout_toRightOf="@+id/task_name1"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/user_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="负责人:" />
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_marginLeft="30sp"
                        android:layout_toRightOf="@+id/user_name1"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/task_addr1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="任务地点:" />
                    <TextView
                        android:id="@+id/task_addr"
                        android:layout_marginLeft="15sp"
                        android:layout_toRightOf="@+id/task_addr1"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/task_req1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="任务要求:" />
                    <TextView
                        android:id="@+id/task_req"
                        android:layout_marginLeft="15sp"
                        android:layout_toRightOf="@+id/task_req1"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/task_content1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="任务内容:" />
                    <TextView
                        android:id="@+id/task_content"
                        android:layout_marginLeft="15sp"
                        android:layout_toRightOf="@+id/task_content1"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/task_score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="任务评分:" />
                    <TextView
                        android:id="@+id/task_score"
                        android:layout_marginLeft="15sp"
                        android:layout_toRightOf="@+id/task_score1"
                        android:textSize="15dp"
                        android:text="未评分"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/task_patroldiscuss1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="巡逻评语:" />
                    <TextView
                        android:id="@+id/tv_patroldiscuss"
                        android:layout_marginLeft="15sp"
                        android:layout_toRightOf="@+id/task_patroldiscuss1"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_ed1"
                android:layout_below="@+id/lin_attribute"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="完成情况："
                />

            <ListView
                android:id="@+id/list_image1"
                android:layout_below="@+id/tv_ed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_ed2"
                android:layout_below="@+id/list_image1"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="巡逻情况："
                />
            <ListView
                android:id="@+id/list_image2"
                android:layout_below="@+id/tv_ed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <EditText
            android:id="@+id/et_taskscore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:numeric="integer"
            android:maxLength="2"
            android:hint="请输入0—99之间的数字"
            android:maxLines="2"
            android:gravity="top"/>
        <Button
            android:id="@+id/bt_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评分"/>
    </LinearLayout>
</RelativeLayout>